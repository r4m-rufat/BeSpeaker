<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_auth_background"
    android:orientation="vertical"
    tools:context=".features.feature_auth.presentation.ui.complete_profile.CompleteProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/gradient_person_profile_add_background"
                android:scaleType="fitXY"
                android:src="@drawable/ic_person"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/img_selectProfileButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_camera"
                app:tint="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <EditText
                android:id="@+id/edit_name"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingHorizontal="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_border_background"
                android:layout_weight="1"
                android:hint="Name" />

            <EditText
                android:id="@+id/edit_surname"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/white_border_background"
                android:layout_weight="1"
                android:hint="Surname" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:checkedButton="@id/radio_male"
            android:layout_marginLeft="-5dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:id="@+id/radio_male"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Female"
                android:layout_marginEnd="10dp"
                android:id="@+id/radio_female"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Others"
                android:id="@+id/radio_others"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English Level"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:entries="@array/levels"
            android:layout_marginTop="10dp"
            android:layout_marginStart="-8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English Level"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_day"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="..."
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_month"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:layout_toEndOf="@+id/txt_day"
                android:textColor="@color/black"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:text="..."/>

            <TextView
                android:id="@+id/txt_year"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/txt_month"
                android:background="@color/white"
                android:gravity="center"
                android:text="..."
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_set_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/white"
                android:text="Set Date"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:text="Complete Profile"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>