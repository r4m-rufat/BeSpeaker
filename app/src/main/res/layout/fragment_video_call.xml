<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.feature_call.presentation.VideoCallFragment">

    <RelativeLayout
        android:id="@+id/receiver_person_video"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <RelativeLayout
        android:id="@+id/callerVideo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="28dp"
        app:cardBackgroundColor="@color/opacity_gray"
        app:cardCornerRadius="10dp"
        android:background="@null"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_opacity_white_circle"
                android:src="@drawable/ic_videocam"
                app:tint="@color/white"
                android:contentDescription="@string/image_content"
                android:padding="6dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/backround_red_circle"
                android:src="@drawable/ic_call_end"
                app:tint="@color/white"
                android:contentDescription="@string/image_content"
                android:padding="8dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_opacity_white_circle"
                android:src="@drawable/ic_mic"
                app:tint="@color/white"
                android:contentDescription="@string/image_content"
                android:padding="5dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>